{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
<h1>{{"admin.userList.title"|trans}}</h1>
<table class="table">
  <thead>
    <tr>
      <th scope="col">id</th>
      <th scope="col">{{"admin.userList.colLName"|trans}}</th>
      <th scope="col">{{"admin.userList.colFName"|trans}}</th>
      <th scope="col">{{"admin.userList.colRoles"|trans}}</th>
    </tr>
  </thead>
  <tbody>
    {% for user in users %}
        <tr>
        <th>{{user.id}}</th>
        <th scope="row">{{user.nom}}</th>
        <td>{{user.prenom}}</td>
        <td>{{user.roles|join(', ')}}</td>
        </tr>
    {% endfor %}
  </tbody>
</table>
{% endblock %}