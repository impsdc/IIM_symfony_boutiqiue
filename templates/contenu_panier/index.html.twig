{% extends 'base.html.twig' %}

{% block title %}Panier{% endblock %}

{% block body %}
   <h1>Votre panier</h1>
    <div class='container'>
        {% if paniers is not empty %}
         <div class='d-flex flex-wrap p-5'>
            {% for panier in paniers %}
                <div class="card m-3" style="width: 18rem;">
                    {% if panier.produit.photo is not null %}
                        <img class="card-img-top" src="{{ asset('uploads/' ~ panier.produit.photo)}}" alt="{{panier.produit.nom}}">
                    {% endif %}
                    <div class="card-body">
                        <h5 class="card-title">{{panier.produit.nom}}</h5>
                        <p class="card-text">{{panier.produit.description}}</p>
                        <p class="card-text">Quantité : {{panier.quantity}}</p>
                        <p class="card-text">{{panier.produit.prix}}€</p>
                        <a href="{{path('panier_delete', {"id" : panier.produit.id}) }}" class="btn btn-danger">Supprimer</a>
                    </div>
                </div>
            {% endfor %}
        </div>
        <div class="w-full d-flex justify-content-center flex-col">
            <div class="card px-5 text-center" style="width: 18rem;">
                <p class="m-2">Vous avez {{countPanier}} produit</p>
                    {% set totaleUn = 0 %} 
                    {% set total = 0 %} 
                    {% for panier in paniers %}  
                        {% set totaleUn = panier.quantity * panier.produit.prix %}
                        {% set total = total + totaleUn %} 
                    {% endfor %}
                <p class="m-2">Total à payer : {{total}}€</p>

                <div class='text-center m-1'>
                {{ form_start(form) }}
                    <button class="btn btn-primary text-center">{{ button_label|default('Payer') }}</button>
                {{ form_end(form) }}
            
                </div>
            </div>                
        </div>
        {% else %}
            <p colspan="7">Vous n'avez pas encore ajouter de produit à votre panier</p>
        {% endif %}
    </div>
     

   
{% endblock %}
