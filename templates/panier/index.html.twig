{% extends 'base.html.twig' %}

{% block title %}Hello PanierController!{% endblock %}

{% block body %}
<h1>{{cart.title}}</h1>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">{{cart.nbOrder}}</th>
                <th scope="col">{{cart.paymentDate}}</th>
                <th scope="col">{{cart.content}}</th>
                <th scope="col">{{cart.price}}</th>
            </tr>
        </thead>
        <tbody>
            {% for commande in commandes %}
                <tr>
                <th>{{commande.id}}</th>
                <th scope="row">{{commande.date|date('Y-m-d H:i:s')}}</th>
               <th>
                {% for produit in commande.contenuPaniers %}
                   | {{produit.produit.nom}} |
                {% endfor %}
                </th>
                 {% set totaleUn = 0 %} 
                    {% set total = 0 %} 
                    {% for produit in commande.contenuPaniers %}  
                        {% set totaleUn = produit.quantity * produit.produit.prix %}
                        {% set total = total + totaleUn %} 
                    {% endfor %}
                   <th>{{total}}â‚¬</th>
            {% endfor %}
        </tbody>
    </table>
    
{% endblock %}
