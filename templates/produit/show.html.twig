{% extends 'base.html.twig' %}

{% block title %}Produit{% endblock %}

{% block body %}
    <h1>Produit</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ produit.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ produit.Nom }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ produit.Description }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ produit.prix }}</td>
            </tr>
            <tr>
                <th>Stock</th>
                <td>{{ produit.stock }}</td>
            </tr>
            <tr>
                 {% if produit.photo is not null %}
                 <td>photo du produit</td>
                    <td>
                        <img style="width:50%;" src="{{ asset('uploads/' ~ produit.photo) }}">
                    </td>
                {% endif %} 
            </tr>
        </tbody>
    </table>
    <a href="{{ path('home') }}">back to list</a>
    {% if is_granted('ROLE_ADMIN') %}
        <a href="{{ path('produit_edit', {'id': produit.id}) }}">edit</a>
        {{ include('produit/_delete_form.html.twig') }}
    {% endif %}

<h2>ajout au panier</h2>
    {{form(form)}}

{% endblock %}
